<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- General text style -->
    <Style x:Key="Text_Style" TargetType="TextBlock">

        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="#DBDBDB" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="70,0,0,0" />
    </Style>

    <!-- Style for book-related text -->
    <Style x:Key="BookTextStyle" TargetType="TextBlock">
        
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Width" Value="170"/>
        <Setter Property="Margin" Value="5,2,5,0"/>
        <Setter Property="Foreground" Value="#C7B1A7"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Josefin Sans"/>
    </Style>

    <!-- Style for the main shelf text -->
    <Style x:Key="TextShelvesMainStyle" TargetType="TextBlock">
        
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="#705448" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Margin"  Value="0,0,0,0" />
    </Style>

    <!-- Style for secondary shelf text -->
    <Style x:Key="TextShelvesSecondStyle" TargetType="TextBlock">

        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment"  Value="Left" />
        <Setter Property="Foreground" Value="#C7B1A7" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="12,0,0,0" />
    </Style>

    <!-- Style for the selected book's main text -->
    <Style x:Key="TextSelectedBookMainStyle" TargetType="TextBlock">
        
        <Setter Property="FontFamily" Value="Josefin Sans"/>
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment"  Value="Left" />
        <Setter Property="Foreground" Value="#B0C2DB" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Margin" Value="0,0,0,0" /> 
    </Style>

    <!-- Style for editing text boxes inside a DataGrid -->
    <Style x:Key="DataGridEditingTextBoxStyle" TargetType="TextBox" >
        
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="MaxLength" Value="30"/>
    </Style>
</ResourceDictionary>