<UserControl x:Class="MyBookShelf.View.Shelves"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="617"
             d:DesignWidth="991">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Info Block -->
            <RowDefinition Height="*"/>
            <!-- Description -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="5" Margin="0,0,0,13" Height="48" Width="304" HorizontalAlignment="Left">
            <ComboBox ItemsSource="{Binding Shelves}" 
                      SelectedItem="{Binding SelectedShelf}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Margin="10" 
                      Style="{StaticResource ComboBoxShelvesStyle}" 
                      SelectedIndex="0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>    
            </ComboBox>
        </Border>

        <!-- Info Block -->
        <Border Grid.Row="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side (Text Info) -->
                <StackPanel Grid.Column="0" >

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Name:" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBox Style="{StaticResource ShelfTextBoxStyle}" Padding="0,14,0,0"  Text="{Binding tbShelfName, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                        <TextBlock Text="Count of books:" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Style="{StaticResource TextShelvesSecondStyle}" Text="{Binding tbCountBooks}"/>
                    </StackPanel>

                </StackPanel>

                <!-- Right Side (Buttons) -->
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                    <Button Content="Add new shelf" Style="{StaticResource ShelfButton}" Command="{Binding AddNewShelfCommand}"/>
                    <Button Content="Delete shelf"
                            Style="{StaticResource ShelfButton}"
                            Margin="0,44,0,0"
                            Command="{Binding DeleteShelfCommand}"
                            Visibility="{Binding IsDeleteShelfButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,44,0,0"
                        Visibility="{Binding IsDeleteShelf, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Content="✔️" Width="102" Height="44" Style="{StaticResource ShelfButton}" Margin="2,0,50,0" Command="{Binding YesDeleteShelfCommand}"/>
                        <Button Content="✖️" Width="102" Height="44" Style="{StaticResource ShelfButton}" Command="{Binding NoDeleteShelfCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Description Box -->
        <Border Grid.Row="2" Background="Transparent">
            <StackPanel>
                <TextBlock Text="Desctiption" Style="{StaticResource TextShelvesMainStyle}"/>
                <TextBox Style="{StaticResource ShelfTextBoxStyle}" 
                         Text="{Binding tbShelfDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0"
                         Width="Auto"
                         Height="267.5"
                         Padding="0,10,0,0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Hidden"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0"
                    Visibility="{Binding IsShelfContentChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button Content="✔️" Width="102" Height="44" Style="{StaticResource ShelfButton}" Margin="0,0,24,0" Command="{Binding CommitChangesShelfCommand}"/>
            <Button Content="✖️" Width="102" Height="44" Style="{StaticResource ShelfButton}" Command="{Binding CancelChangesShelfCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>