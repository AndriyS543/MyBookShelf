<UserControl x:Class="MyBookShelf.View.BooksMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="617"
             d:DesignWidth="991">

    <Grid>
         <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    
    <!-- ComboBox зверху -->
        <ComboBox ItemsSource="{Binding Shelves}" 
          SelectedItem="{Binding SelectedShelf}"
          HorizontalAlignment="Center"
          VerticalAlignment="Top"
          Margin="10" 
          Style="{StaticResource ComboBoxShelvesStyle}" 
          SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>



        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding FilteredBooks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Left" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5,10,5,10" HorizontalAlignment="Center">
                            <Button Style="{StaticResource BookButtonStyle}"
                                Command="{Binding DataContext.TemplateClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}">
                                
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding PathImg, Converter={StaticResource NullToImageConverter}}"  Stretch="UniformToFill"/>
                                </Button.Background>

                                <TextBlock Text="{Binding Title}" FontSize="18" Width="120" Height="200" Background="#705448" Foreground="#C7B1A7" TextAlignment="Center" Padding="0 80 0 0"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    Visibility="{Binding PathImg, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </Button>

                            <TextBlock Style="{StaticResource BookTextStyle}"
                                   Text="{Binding Title}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


    </Grid>

</UserControl>