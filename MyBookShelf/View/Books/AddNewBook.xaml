<Window x:Class="MyBookShelf.View.AddNewBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="507"
             Height="520"
             WindowStartupLocation="CenterScreen"
             WindowStyle="None"
             AllowsTransparency="True"
             Background="Transparent">

    
    <Grid>
        <Border Background="#705448"  CornerRadius="20">
        <!-- Основний вміст -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Зображення книги (кнопка додавання) -->
            <Button Style="{StaticResource BookButtonStyle}" Background="#C7B1A7" Foreground="#705448" FontSize="60" Content="+" />

            <StackPanel Orientation="Vertical" Margin="25,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Title:" Style="{StaticResource TextShelvesMainStyle}" Foreground="#B0C2DB"/>
                    <TextBox  Style="{StaticResource ShelfTextBoxStyle}" 
                              BorderThickness="0,0,0,2" 
                              BorderBrush="#3D2012" 
                              Padding="0,14,0,0" 
                              Foreground="#3D2012" 
                              Width="401"
                              Text="{Binding tbBookTitle, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Author:" Style="{StaticResource TextShelvesMainStyle}"  Foreground="#B0C2DB"/>
                    <TextBox  Style="{StaticResource ShelfTextBoxStyle}" 
                              BorderThickness="0,0,0,2" 
                              BorderBrush="#3D2012" 
                              Padding="0,14,0,0" 
                              Foreground="#3D2012" 
                              Text="{Binding tbBookAuthor, UpdateSourceTrigger=PropertyChanged}" 
                              Width="363"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Count page:" Style="{StaticResource TextShelvesMainStyle}" Foreground="#B0C2DB"/>
                    <TextBox  Style="{StaticResource ShelfTextBoxStyle}" 
                              BorderThickness="0,0,0,2" 
                              BorderBrush="#3D2012"  
                              Padding="0,14,0,0" 
                              Foreground="#3D2012" 
                              Text="{Binding tbCountPage, UpdateSourceTrigger=PropertyChanged}"
                              Width="295"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ganre:" Style="{StaticResource TextShelvesMainStyle}" Foreground="#B0C2DB" Height="116"/>
                    <WrapPanel Orientation="Horizontal" Width="388">
                        <TextBlock Text="fantasy" Margin="8 0 0 0" Foreground="#C7B1A7" Padding="0 1 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="science" Margin="8 0 0 0" Foreground="#3D2012" TextDecorations="Underline" Padding="0 13 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="mystery" Margin="8 0 0 0" Foreground="#C7B1A7" Padding="0 1 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="romance" Margin="8 0 0 0" Foreground="#3D2012" TextDecorations="Underline" Padding="0 13 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="fantasy" Margin="8 0 0 0" Foreground="#C7B1A7" Padding="0 1 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="science" Margin="8 0 0 0" Foreground="#3D2012" TextDecorations="Underline" Padding="0 13 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="mystery" Margin="8 0 0 0" Foreground="#C7B1A7" Padding="0 1 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="romance" Margin="8 0 0 0" Foreground="#3D2012" TextDecorations="Underline" Padding="0 13 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="romance" Margin="8 0 0 0" Foreground="#3D2012" TextDecorations="Underline" Padding="0 13 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="fantasy" Margin="8 0 0 0" Foreground="#C7B1A7" Padding="0 1 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="science" Margin="8 0 0 0" Foreground="#3D2012" TextDecorations="Underline" Padding="0 13 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="mystery" Margin="8 0 0 0" Foreground="#C7B1A7" Padding="0 1 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                        <TextBlock Text="romance" Margin="8 0 0 0" Foreground="#3D2012" TextDecorations="Underline" Padding="0 13 0 0" FontSize="20" Style="{StaticResource TextShelvesMainStyle}"/>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Add" Width="124" Style="{StaticResource ShelfButton}" Command="{Binding AddBooksCommand}" Click="CloseApp_Click"/>
                <Button Content="Cancel" Width="124"  Margin="44 0 0 0" Style="{StaticResource ShelfButton}" Click="CloseApp_Click" />
            </StackPanel>
        </StackPanel>
        </Border>
    </Grid>

</Window>